{
    "editor.defaultFormatter": null,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false, // enable per language
    "editor.formatOnType": true,
    "editor.stickyTabStops": true,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "editor.fontSize": 12,
    "editor.fontFamily": "'Noto Sans Mono', 'Source Code Pro', 'Droid Sans Mono'",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}/.venv/bin",
        "${workspaceFolder}/.venv/lib/python3.10/site-packages",
        "${workspaceFolder}/coinbase"
    ],
    "python.languageServer": "Jedi",
    "python.analysis.typeCheckingMode": "basic",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/.flake8",
    "python.linting.enabled": true,
    "[python]": {
        "editor.formatOnPaste": false, // black doesn't support this feature
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
}
